        "joi": "^17.4.2",
        "mongodb": "^4.1.1",
        "mongoose": "^6.0.1",
        "morgan": "^1.10.0",
        "multer": "^1.4.2",
        "winston": "^3.3.3"
    },
    "scripts": {
        "tsc": "tsc",
        "dev": "nodemon -r dotenv/config index.ts",
        "lint": "eslint . --ext .ts",
        "test": "nyc --reporter=html mocha --recursive -w -c || true",
        "build": "tsc --noEmitOnError --project ./",
        "start": "node -r dotenv/config build/index.js"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm lint-staged"
        }
    },
    "lint-staged": {
        "*.ts": [
            "eslint --fix"
        ]
    }
